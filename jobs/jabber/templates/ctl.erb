#!/bin/bash
set -e -x

JOB_NAME=jabber
PACKAGE_NAME=hellopkg

RUN_DIR=/var/vcap/sys/run/$JOB_NAME
LOG_DIR=/var/vcap/sys/log/$JOB_NAME
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    /var/vcap/jobs/$JOB_NAME/packages/$PACKAGE_NAME/hello.sh >> $LOG_DIR/jabber.stdout.log 2>> $LOG_DIR/jabber.stderr.log &
    echo $! > $PIDFILE

    ;;

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
